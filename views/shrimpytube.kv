<View>

    youtubeURL: youtubeURL
    destinationFolder: destinationFolder
    errorMessage: errorMessage

    GridLayout:
        cols: 1
        size: root.width, root.height

        GridLayout:
            cols: 2

            Label:
                text: "Youtube URL"

            TextInput:
                id: youtubeURL
                multiline: False

            Label:
                text: "Destination Folder"

            TextInput:
                id: destinationFolder
                multiline: False

        Label:
            id: errorMessage
            text: ""
            color: 1,0,0,1

        Button:
            text: "Download"
            on_press: root.download()
        Button:
            text: "Save folder path"
            on_press: root.save_destination_folder()